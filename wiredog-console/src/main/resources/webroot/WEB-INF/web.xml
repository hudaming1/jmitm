<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<!-- pipe list -->
	<servlet>
		<servlet-name>pipeListServelet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.PipeListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pipeListServelet</servlet-name>
		<url-pattern>/pipe/list</url-pattern>
	</servlet-mapping>
	<!-- pipe detail -->
	<servlet>
		<servlet-name>pipeDetailServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.PipeDetailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pipeDetailServlet</servlet-name>
		<url-pattern>/pipe/get</url-pattern>
	</servlet-mapping>
	<!-- session list -->
	<servlet>
		<servlet-name>SessionListServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.SessionListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SessionListServlet</servlet-name>
		<url-pattern>/session/list</url-pattern>
	</servlet-mapping>
	<!-- session detail -->
	<servlet>
		<servlet-name>SessionDetailServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.SessionDetailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SessionDetailServlet</servlet-name>
		<url-pattern>/session/get</url-pattern>
	</servlet-mapping>
	<!-- download_cert -->
	<servlet>
		<servlet-name>certDownloadServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.CertDownloadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>certDownloadServlet</servlet-name>
		<url-pattern>/c/d</url-pattern>
	</servlet-mapping>
	<!-- clear all -->
	<servlet>
		<servlet-name>SessionClearServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.SessionClearServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SessionClearServlet</servlet-name>
		<url-pattern>/session/clear</url-pattern>
	</servlet-mapping>
	<!-- clear all -->
	<servlet>
		<servlet-name>GetHttpRequest</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.CopyHttpRequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetHttpRequest</servlet-name>
		<url-pattern>/session/getHttpRequest</url-pattern>
	</servlet-mapping>
	<!-- rebuild -->
	<servlet>
		<servlet-name>SessionRebuildServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.SessionRebuildServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SessionRebuildServlet</servlet-name>
		<url-pattern>/session/rebuild</url-pattern>
	</servlet-mapping>
	<!-- resend -->
	<servlet>
		<servlet-name>SendRequestServlet</servlet-name>
		<servlet-class>org.hum.wiredog.console.http.servlet.SendRequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendRequestServlet</servlet-name>
		<url-pattern>/session/sendRequest</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list> 
		<welcome-file>index.html</welcome-file> 
   </welcome-file-list> 
</web-app>